    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="chapter05" namespace="/chapter05" extends="struts-default">
		<action name="tags_*" class="org.zxd.struts.chapter05.action.TagsAction" method="{1}">
			<result>/views/chapter05/${viewName}.jsp</result>
